<div class="form-body">
  <div class="row">
    <div class="form-holder">
      <div class="form-content">
        <div class="form-items">
          <h3 class="text-center py-3">Registro de Cliente</h3>

          <div class="row">
            <div class="col-8 offset-2 border p-3">
              <form class="requires-validation" novalidate>
                <div class="row py-2">
                  <div class="col-md-10 col-10">
                    <input
                      class="form-control"
                      type="number"
                      name="rut"
                      placeholder="Rut"
                      maxlength="8"
                      min="1" 
                      max="99999999"
                      oninput="maxLengthCheck(this)"

                      required
                    />
                    <div class="valid-feedback"></div>
                    <div class="invalid-feedback">
                      El rut no puede estar en blanco
                    </div>
                  </div>
                  <div class="col-md-2 col-2">
                    <input
                      class="form-control"
                      type="text"
                      name="digito-verificador"
                      maxlength="1"
                      size="1"

                      placeholder=""
                      required
                    />
                    <div class="valid-feedback"></div>
                    <div class="invalid-feedback">
                      El rut no puede estar en blanco
                    </div>
                  </div>
                </div>

                <div class="col-md-12 py-2">
                  <input
                    class="form-control"
                    type="text"
                    name="name"
                    placeholder="Nombre"
                    pattern="[A-Za-z]+"
                    size="30"
                    maxlength="30"
                    required
                  />
                  <div class="valid-feedback"></div>
                  <div class="invalid-feedback">
                    El Nombre no puede estar en blanco
                  </div>
                </div>

                <div class="col-md-12 py-2">
                  <input
                    class="form-control"
                    type="text"
                    name="apellido"
                    placeholder="Apellido"
                    size="30"
                    maxlength="30"
                    pattern="[A-Za-z]+"

                    required
                  />
                  <div class="valid-feedback"></div>
                  <div class="invalid-feedback">
                    El Apellido no puede estar en blanco
                  </div>
                </div>

                <div class="col-md-12 py-2">
                  <input
                    class="form-control"
                    type="text"
                    name="direccion"
                    placeholder="Direccion"
                    size="80"
                    maxlength="80"
                    pattern="[A-Za-z]+"
                    required
                  />
                  <div class="valid-feedback"></div>
                  <div class="invalid-feedback">
                    La direccion no puede estar en blanco
                  </div>
                </div>

                <div class="col-md-12 py-2">
                  <select class="form-select" required>
                    <option selected disabled value="">Comuna</option>
                    <option value="villarrica">Villarrica</option>
                    <option value="pucon">Pucon</option>
                    <option value="pitrufquen">Pitrufquen</option>
                    <option value="Freire">Freire</option>
                    <option value="temuco">Temuco</option>
                  </select>
                  <div class="valid-feedback">Comuna seleccionada</div>
                  <div class="invalid-feedback">Selecciona una comuna</div>
                </div>

                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="invalidCheck"
                    required
                  />
                  <label class="form-check-label"
                    >Confirmo que la informacion es correcta</label
                  >
                  <div class="invalid-feedback">
                    Por favor confirmar que la informacion es correcta
                  </div>
                </div>

                <div class="form-button mt-3">
                  <button id="submit" type="submit" class="btn btn-primary">
                    Registrar
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="{{ '/assets/js/validacion.js' | url }}"></script>
<script src="{{ '/assets/js/validacionnumero.js' | url }}"></script>
