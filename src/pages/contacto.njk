<div class="row">
  <div class="col-8 offset-2 border p-3">
    <div class="container py-4">
      <form id="contactForm">
        <div class="mb-3">
          <label class="form-label" for="name">Name</label>
          <input
            class="form-control"
            id="name"
            type="text"
            placeholder="Nombre"
          />
        </div>

        <div class="mb-3">
          <label class="form-label" for="emailAddress">Email Address</label>
          <input
            class="form-control"
            id="emailAddress"
            type="email"
            placeholder="Email"
          />
        </div>

        <div class="mb-3">
          <label class="form-label" for="message">Message</label>
          <textarea
            class="form-control"
            id="message"
            type="text"
            placeholder="Mensaje"
            style="height: 10rem"
          ></textarea>
        </div>

        <div class="d-grid">
          <button class="btn btn-primary btn-lg" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
